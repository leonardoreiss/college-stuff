programa
{
	
	funcao inicio()
	{
		//variaveis
		real media

		//entradas de dados 
		escreva("Informe a média do aluno: ")
		leia(media)

		//saida de dados
		se(media >= 6)
		{	//parte verdadeira
			escreva("Parabéns, você foi aprovado")
		}
		senao
		{//parte falsa 
			escreva("Que pena, você foi reprovado.. ksksksks")
		}
	}
}
